@using RssFeeder.Controllers
@model RssFeeder.Resources.NewRssLinkResource

<form method="post" asp-action="Create" asp-controller="Feeds">
    <h4>Add a New RSS Feed</h4>
    <hr />
    <div class="form-group">
        <label asp-for="Url"></label>
        <input asp-for="Url" class="form-control" />
        <span asp-validation-for="Url" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" id="rssFeedDescriptionInput" maxlength="100" class="form-control" rows="1"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div>
        <button type="submit" class="rss-feed-btn btn btn-primary">Register</button>
    </div>
</form>
