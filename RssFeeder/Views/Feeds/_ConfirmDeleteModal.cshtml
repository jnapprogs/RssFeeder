@using RssFeeder.Controllers
@model int

<div id="confirmDeleteModal" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm RSS Feed Deletion</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true" class="remove-modal">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Are you sure?</p>
            </div>
            <div class="modal-footer">
                <button type="button"
                        id="confirmDeleteButton"
                        class="btn btn-danger"
                        data-url="@Url.Action(nameof(FeedsController.Delete), "Feeds")"
                        data-feed_id="@Model">
                    Delete
                </button>
                <button type="button" class="btn btn-secondary remove-modal" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>