@using RssFeeder.Controllers
@model RssFeeder.Resources.RssLinkResource

<div class="card rss-link-card">
        <div class="card-header">
            <img src="@Model.ImageUrl" alt="RSS Link Image" />
        </div>
        <div class="card-body">
            <h5 class="card-title">@Model.Name</h5>
            <p class="card-text">@Model.Description</p>
        </div>
        <div class="card-footer">
            <button class="rss-feed-btn rss-feed-card-btn btn btn-outline-danger delete-btn"
                    data-url="@Url.Action(nameof(FeedsController.ConfirmDelete), "Feeds")"
                    data-feed_id="@Model.Id">
                Delete
            </button>
            <a class="rss-feed-btn rss-feed-card-btn btn btn-outline-dark edit-btn" asp-action="Edit" asp-controller="Feeds" asp-route-id="@Model.Id">
                Edit
            </a>
            <button type="submit" class="rss-feed-btn rss-feed-card-btn btn btn-outline-primary">Open</button>
        </div>
    </div>
