@using RssFeeder.Controllers
@model RssFeeder.Resources.NewRssLinkResource

<div id="newRssLinkModal" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">New RSS Link</h5>
                <button id="newRssLinkModalCloseButton" type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span id="innerItem" aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="newRssLinkForm"
                      asp-controller="Feeds"
                      asp-action="CreateNewLink"
                      data-ajax="true"
                      data-ajax-update="#newRssLinkForm"
                      data-ajax-mode="replace">
                    <div id="summary" asp-validation-summary="All"></div>
                    <div class="form-group">
                        <label asp-for="Url"></label>
                        <input id="rssLinkUrlInput" asp-for="Url" class="form-control"/>
                        <span asp-validation-for="Url" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description"></label>
                        <textarea id="rssLinkDescriptionInput" asp-for="Description" class="form-control" rows="2"></textarea>
                        <span asp-validation-for="Description"></span>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary">Cancel</button>
                <button id="confirmAddLinkButton" data-url="@Url.Action(nameof(FeedsController.CreateNewLink))" type="button" class="btn btn-secondary">Confirm</button>
            </div>
        </div>
    </div>
</div>
